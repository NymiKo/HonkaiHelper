<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/DP16"
    app:cardElevation="2dp"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/DP16">

        <ImageView
            android:id="@+id/image_hero_avatar_in_setup_team"
            style="@style/image_hero_in_team"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/roundedTopRightCornerImageView"
            app:strokeColor="@color/dark_gray"
            app:strokeWidth="1dp" />

        <TextView
            android:id="@+id/text_hero_name_in_setup_team"
            style="@style/name_hero_in_team"
            android:layout_width="80dp"
            android:layout_gravity="bottom"
            app:layout_constraintBottom_toBottomOf="@+id/image_hero_avatar_in_setup_team"
            app:layout_constraintEnd_toEndOf="@+id/image_hero_avatar_in_setup_team"
            app:layout_constraintStart_toStartOf="@+id/image_hero_avatar_in_setup_team" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/DP20"
            android:fontFamily="sans-serif-medium"
            android:text="@string/level_hero"
            app:layout_constraintStart_toEndOf="@+id/image_hero_avatar_in_setup_team"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/DP20"
            android:layout_marginTop="@dimen/DP8"
            android:fontFamily="sans-serif-medium"
            android:text="@string/eidolon_hero"
            app:layout_constraintStart_toEndOf="@+id/image_hero_avatar_in_setup_team"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_hero_weapon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="@dimen/DP20"
            android:src="@drawable/ic_add"
            app:layout_constraintBottom_toBottomOf="@+id/image_hero_avatar_in_setup_team"
            app:layout_constraintStart_toEndOf="@+id/image_hero_avatar_in_setup_team"
            app:shapeAppearance="@style/roundedCornersImageView"
            app:strokeWidth="2dp"
            app:tint="@color/light_gray" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="@dimen/DP20"
            android:src="@drawable/ic_add"
            app:layout_constraintBottom_toBottomOf="@+id/image_hero_weapon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/image_hero_weapon"
            app:shapeAppearance="@style/roundedCornersImageView"
            app:strokeWidth="2dp"
            app:tint="@color/light_gray" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>