<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".createteam.CreateTeamFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        style="@style/base_toolbar_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/creating_a_team"
        app:titleTextAppearance="@style/toolbar"
        app:titleTextColor="?attr/colorSecondary" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_team_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="recycler_viewing_command, materialDivider"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_viewing_command"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="@dimen/DP8"
        app:layout_constraintBottom_toTopOf="@id/materialDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbar"
        tools:itemCount="4"
        tools:listitem="@layout/item_hero_create_team" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/materialDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/DP16"
        android:layout_marginTop="@dimen/DP16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_viewing_command" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_create_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="recycler_heroes_list, button_save_team"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_heroes_list"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/DP16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialDivider"
        tools:itemCount="4"
        tools:listitem="@layout/item_hero_create_team_list" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_save_team"
        style="@style/base_floating_button"
        android:src="@drawable/ic_save"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="?attr/colorOnSecondary" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_retry"
        android:visibility="gone"
        app:constraint_referenced_ids="button_retry, text_retry"
        style="@style/group_message_style" />

    <TextView
        android:id="@+id/text_retry"
        style="@style/text_view_message_style"
        android:text="@string/error"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_retry"
        android:text="@string/retry"
        android:backgroundTint="?attr/colorSecondary"
        app:layout_constraintEnd_toEndOf="@+id/text_retry"
        app:layout_constraintStart_toStartOf="@+id/text_retry"
        app:layout_constraintTop_toBottomOf="@+id/text_retry"
        style="@style/button_message_style" />

    <ProgressBar
        android:id="@+id/progress_team_creation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbar" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_layout_heroes_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/DP16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialDivider">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include layout="@layout/shimmer_item_hero_in_create_team" />

            <include layout="@layout/shimmer_item_hero_in_create_team" />

            <include layout="@layout/shimmer_item_hero_in_create_team" />

            <include layout="@layout/shimmer_item_hero_in_create_team" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>