<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create_build_hero.CreateBuildHeroFragment">

    <ImageView
        android:id="@+id/image_hero_avatar_in_create_buildr"
        style="@style/image_hero_in_team"
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_margin="@dimen/DP16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_hero_name_in_create_build"
        style="@style/name_hero_in_team"
        android:layout_height="35dp"
        android:textSize="@dimen/SP18"
        app:layout_constraintBottom_toBottomOf="@+id/image_hero_avatar_in_create_buildr"
        app:layout_constraintEnd_toEndOf="@+id/image_hero_avatar_in_create_buildr"
        app:layout_constraintStart_toStartOf="@+id/image_hero_avatar_in_create_buildr"
        tools:text="Блэйд" />

    <TextView
        android:id="@+id/textView3"
        style="@style/text_view_message_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/DP16"
        android:layout_marginTop="@dimen/DP16"
        android:layout_marginBottom="@dimen/DP8"
        android:text="@string/weapon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_hero_avatar_in_create_buildr" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_weapon_in_create_build"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/DP16"
        android:layout_marginTop="@dimen/DP8"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>