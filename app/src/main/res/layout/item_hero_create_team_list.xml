<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/hero_avatar_in_create_team_list"
        app:shapeAppearanceOverlay="@style/roundedTopRightCornerImageView"
        app:strokeColor="@color/gray"
        app:strokeWidth="1dp"
        style="@style/image_hero_in_team" />

    <TextView
        android:id="@+id/hero_name_in_create_team_list"
        android:layout_gravity="bottom"
        style="@style/name_hero_in_team" />

</FrameLayout>