<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="image_hero_in_team">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">120dp</item>
    </style>

    <style name="name_hero_in_team">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@color/dark_gray</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="roundedTopRightCornerImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
    </style>

    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="toolbar">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="shimmer_item_hero_style">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginStart">@dimen/DP16</item>
        <item name="android:layout_marginEnd">@dimen/DP16</item>
        <item name="android:backgroundTint">@color/gray</item>
    </style>

    <style name="EditTextLayoutLogin" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/DP40</item>
    </style>

    <style name="EditTextLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="text_view_message_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/SP18</item>
    </style>

    <style name="button_message_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/DP8</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="group_message_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="base_toolbar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="base_floating_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/DP16</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedCornersImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/positiveDialogTextColor</item>
        <item name="buttonBarNegativeButtonStyle">@style/negativeDialogTextColor</item>
    </style>
    
    <style name="positiveDialogTextColor">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <style name="negativeDialogTextColor">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

</resources>